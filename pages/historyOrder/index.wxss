.allBox{
  width: 100%;
  height: 100vh;
  display: flex;
  flex-direction: column;
}
    
.canvasBox{
  width: 100%;
  /*height: 250px; 有图表*/
  height: 200px;/*无图表*/
  position: fixed;
  top: 0px;
  left: 0px;
    background-color: #fff;
    font-size: 35rpx;
    color: #333;
    font-family: Helvetica,Arial,"Helvetica Neue","Droid Sans","Microsoft YaHei",sans-serif;
}
.canvas {
    width: 100%;
    height: 200px;
    position:absolute;
    bottom:0px;
    left: 0px;
}

/*表格title*/
.titleBox{
  width:100%;
  height: 96rpx;
  position: fixed;
  top:200px;
  left: 0px;
  border-top: 1rpx #d2d2d2 solid;
  border-bottom: 1rpx #d2d2d2 solid;
  background-color: #f2f2f2;
  display: flex;
}
/*内部元素 单行，横排，上下左右居中*/
.centerA{
  display: flex;
  justify-content: center;
  align-items: center;
}
/*列表盒子*/
.listBox{
  padding-top: 250px;
  width:100%;
  overflow: scroll;
}

/*内部元素 单行，横排，上下左右居中*/
.centerB{
  display: flex;
  flex-direction: row;
  
}

.font28{
  font-size: 26rpx;
}
