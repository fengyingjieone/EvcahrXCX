/**index.wxss**/
@import "../../images/common.wxss";
.box{
	width:100%;
  min-height: 100%;
	display: flex;
  flex-direction: column;
  align-items: center;
  justify-content:center;  
  border-top: 1rpx #d2d2d2 solid;  
}
.center-x{
	display: flex;
  	flex-direction:row;
  	align-items: center;
	justify-content: center;
}
.center-x-left{
	display: flex;
  	flex-direction:row;
  	align-items: center;
}
.mapBox{
  width: 100%;
  height: 200px;
}


.streetBox{
	width:90%;
	height:80rpx;
  font-size: 34rpx;
	margin:0rpx auto;
	padding-right:4rpx;	
}
.streetBoxC{
	width:90%;
	height:40rpx;
	margin:0rpx auto;
	padding-right:4rpx;	
}
.streetName{
	width:180rpx;
	height:100%;	
}
.streetBox input{
	height:70rpx;
	display: flex;
	flex-grow:50;
	align-items: center;
	background-color:#fff;
	border:1rpx #d2d2d2 solid;
}
.fontred{color:#FF0000}
.saveBen{
	width:90%;
	height:80rpx;
	margin:20rpx auto;
	padding-right:4rpx;	
	padding-left:4rpx;
	border-radius:5rpx;
	background-color:#3DCAE6;
	font-size:46rpx;
	color:#fff;
}
.textareacss{
  height: 80rpx;
	display: flex;
	flex-grow:50;
  background-color:#fff;
	border:1rpx #d2d2d2 solid;
}