
/*搜索筛选容器*/
.topBox{
  width: 100%;
  height: 96rpx;
  background-color: #fff;
  position:fixed;
  top: 0rpx;
  left:0rpx;
  z-index: 2;
  display: flex;
  align-items: center;
  justify-content: center;
}
.searchInput{
  height:58rpx;
  width:560rpx;
  margin: 0rpx;
  padding: 0rpx;
  padding-left: 17rpx;
  border:1rpx #d2d2d2 solid;
  border-radius: 29rpx;
}
.searchBtn{
  width: 114rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content:center;
}
.allBox{
  width: 100%; 
  display: flex;
	flex-direction:column;
}
.searchPadding{
  width: 100%;
  height: 96rpx;
}
.searchResultList{
  width:100%;
  height: 140rpx;
  padding-top: 18rpx;
  background-color: #fff;
  margin-top: 12rpx;
  display: flex;
  flex-direction:column;
}
.searchTop{
  width:100%;
  height:60rpx;
  display: flex;
  align-items: center;
}
.searchRight{
  width:107rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content:flex-end;
  margin-right: 28rpx;
  flex-grow:0;
}
.searchLeft{
  width:107rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  margin-left: 28rpx;
  flex-grow:20;
}
.searchBRight{

  padding-left: 10rpx;
  padding-right: 10rpx;
  height: 50rpx;
  border-radius: 8rpx;
  background-color: #3DCAE6;
  color: #fff;
  font-size: 32rpx;
  display: flex;
  align-items: center;
  margin-right: 28rpx;
}
.searchBRightBtn{
  padding-left: 10rpx;
  padding-right: 10rpx;
  height: 50rpx;
  border-radius: 4rpx;
  background-color: #3DCAE6;
  color: #fff;
  display: flex;
  align-items: center;
  margin-right: 28rpx;
}
.searchBLeft{
  width:107rpx;
  height: 60rpx;
  color:#9d9d9d;
  font-size: 32rpx;
  display: flex;
  align-items: center;
  margin-left: 28rpx;
  flex-grow:20;
}