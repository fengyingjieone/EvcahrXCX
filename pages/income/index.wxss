/**index.wxss**/
@import "../images/common.wxss";
.topBox{
  width:100%;
  height: 388rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #3DCAE6;
}
/*单行，横排，上下左右居中*/
.centerA{
  display: flex;
  justify-content: center;
  align-items: center;
}
.name{
  width: 100%;
  height: 86rpx;
  color: #fff;  
}
.yesterday{
  width: 100%;
  height: 60rpx;
  color: #fff; 
}
.moneyTxt{
  width: 100%;
  height: 103rpx;
  font-size: 66rpx;
  color: #fff;
}
.totalMoneyTxt{
  width: 100%;
  height: 36rpx;
  padding-top:17rpx;
  color: #fff; 
}
.totalMoney{
  width: 100%;
  height: 43rpx;
  color: #fff; 
}
.cutLine{
  margin-top: 20rpx;
  width:100%;
  height:24rpx;
  background-color: #fff;
  border-top: 1rpx #d2d2d2 solid;
}
.scrollTitle{
  width:100%;
  height: 85rpx;
  text-indent:30rpx;
  background-color: #f2f2f2;
  border-bottom: 1rpx #d2d2d2 solid;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.scrollBox{
 
}
.cutListBox{
  width: 100%;
  height: 84rpx;  
  display: flex;
  align-items: center;
  border-bottom: 1px #d2d2d2 solid;
  background-color: #ffffff;
}
.cutListLeft{
  width:85%;
  height: 84rpx;
  text-indent:30rpx;
  display: flex;
  align-items: center;
}
.iconarrow{
  width:18rpx; 
  height:32rpx;
  margin-left: 30rpx;
  margin-right: 30rpx;
}
.powerBtn{
  width:15%;
  height: 84rpx;
  display: flex;
  align-items: center;
  justify-content:flex-end;
}





.listBox{
  width:100%;
  height: 110rpx;
  display: flex;
}
.listLeft{
  width:50%;
  height: 110rpx;
  display: flex;
  flex-direction: column;
  justify-content:center;
  border-bottom: 1rpx #d2d2d2 solid;
  text-indent:30rpx;
}
.listTitle{padding: 2rpx 0rpx;}
.listMoney{padding-right:30rpx;}
.listRight{
  width:50%;
  height: 110rpx;
  display: flex;
  flex-direction: row-reverse;
  align-items: center;
  border-bottom: 1rpx #d2d2d2 solid;  
}

.canvasBox{
  width: 100%;
  height: auto;
  padding-top:24rpx;
    display: flex;
    flex-grow:0;
    flex-direction: column;
    box-sizing: border-box;
    -webkit-text-size-adjust:none;
    -webkit-user-select: none;
    background-color: #fff;
    font-size: 35rpx;
    color: #333;
    font-family: Helvetica,Arial,"Helvetica Neue","Droid Sans","Microsoft YaHei",sans-serif;
}
.canvas {
    width: 100%;
    height: 200px;
    border-bottom: 1rpx #d2d2d2 solid;  
}