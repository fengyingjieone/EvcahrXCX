/**index.wxss**/
@import "../images/common.wxss";
.coinIcon{
  width: 100%;
  padding-top:68rpx;
  padding-bottom:20rpx;
  border-top:1px #d2d2d2 solid;
  display: flex;
  justify-content: center;
}
.iconco{
  width: 148rpx; height: 132rpx;
}
.exchangeBtn{
  width:50%;
  height: 80rpx;
  background-color: #3DCAE6;
  border-radius: 4rpx;
  margin-top: 40rpx;
  margin-bottom:30rpx;
  color: #fff;
  display: flex;
  align-items: center;
  justify-content: space-around;
}
.listCut{
  height: 45rpx;
}
.topBox{
  width:100%;
  position:fixed; 
  top: 0px;
  z-index: 2;
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #fff;
}
.scrollBox{
  padding-top: 530rpx;
}
.cutLine{
  width:100%;
  height:24rpx;
  background-color: #f2f2f2;
  border-top: 1rpx #d2d2d2 solid;
  border-bottom: 1rpx #d2d2d2 solid;
}
.scrollTitle{
  width:100%;
  height: 85rpx;
  text-indent:30rpx;
  border-bottom: 1rpx #d2d2d2 solid;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.listBox{
  width:100%;
  height: 110rpx;
  display: flex;
}
.listLeft{
  width:50%;
  height: 110rpx;
  display: flex;
  flex-direction: column;
  justify-content:center;
  border-bottom: 1rpx #d2d2d2 solid;
  text-indent:30rpx;
}
.listTitle{padding: 2rpx 0rpx;}
.listMoney{padding-right:30rpx;}
.listRight{
  width:50%;
  height: 110rpx;
  display: flex;
  flex-direction: row-reverse;
  align-items: center;
  border-bottom: 1rpx #d2d2d2 solid;  
}

